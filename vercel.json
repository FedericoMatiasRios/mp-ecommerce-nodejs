{
    "version": 2,
    "builds": [
      {
        "src": "api/index.js",
        "use": "@now/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "api/index.js" }
    ],
    "public": false,
    "install": { "target": "npm", "include": ["package.json", "package-lock.json"] }
  }
  